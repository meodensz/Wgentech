<link rel="stylesheet" href="{{ 'section-subcribe-banner.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript>{{ 'section-subcribe-banner.css' | asset_url | stylesheet_tag }}</noscript>

<div data-section-id="{{ section.id }}" data-section-type="subcribe-banner-section" class="gp-section-wrapper">
  <div class="subcribe-banner-section gp-section-inner">
    <div class="subcribe-content">
      {% if section.settings.heading %}
        <h3 class="heading">{{ section.settings.heading }}</h3>
      {% endif %}
      {% if section.settings.description %}
        <p class="description">{{ section.settings.description }}</p>
      {% endif %}
      <div class="subcribe-button">
        <a href="{{ routes.account_url }}" class="btn-2" title="{% if customer %}{{ 'general.subcribe.login' | t }}{% else %}{{ 'general.subcribe.account' | t }}{% endif %}"{% if section.settings.open_new_window %} targer="_blank"{% endif %}>{{ 'general.subcribe.login' | t }}</a>
        <a href="{{ routes.account_register_url }}" class="btn-2" title="{{ 'general.subcribe.register' | t }}"{% if section.settings.open_new_window %} targer="_blank"{% endif %}>{{ 'general.subcribe.register' | t }}</a>
      </div>
    </div>
  </div>
</div>
{% style %}
{% if section.settings.mobile_image != blank %}
  [data-section-id="{{ section.id }}"] .subcribe-banner-section{
    background-image:url({{ section.settings.mobile_image | image_url: width: 2800 }});
  }
{% else %}
  [data-section-id="{{ section.id }}"] .subcribe-banner-section{
    background-image:url({{ section.settings.image | image_url: width: 2800 }});
  }
{% endif %}
@media (min-width: 768px) {
  [data-section-id="{{ section.id }}"] .subcribe-banner-section{
    background-image:url({{ section.settings.image | image_url: width: 2800 }});
  }
}
{% if section.settings.color_heading != blank %}
  [data-section-id="{{ section.id }}"] .subcribe-banner-section .subcribe-content .heading{
    color:{{ section.settings.color_heading }};
  }
{% endif %}
{% if section.settings.color_text != blank %}
  [data-section-id="{{ section.id }}"] .subcribe-banner-section .subcribe-content .description {
    color:{{ section.settings.color_text }};
  }
{% endif %}
[data-section-id="{{ section.id }}"] .subcribe-banner-section .subcribe-content .btn-2 {
  {% if section.settings.button_text_color != blank %}
    color:{{ section.settings.button_text_color }};
  {% endif %}
  {% if section.settings.button_border_color != blank %}
    border-color:{{ section.settings.button_border_color }};
  {% endif %}
  {% if section.settings.button_color != blank %}
    background-color:{{ section.settings.button_color }};
  {% endif %}
}
[data-section-id="{{ section.id }}"] .subcribe-banner-section .subcribe-content .btn-2:hover {
  {% if section.settings.button_text_hover_color != blank %}
    color:{{ section.settings.button_text_hover_color }};
  {% endif %}
  {% if section.settings.button_border_hover_color != blank %}
    border-color:{{ section.settings.button_border_hover_color }};
  {% endif %}
  {% if section.settings.button_hover_color != blank %}
    background-color:{{ section.settings.button_hover_color }};
  {% endif %}
}
{% endstyle %}

{% schema %}
{
  "name": "Subcribe banner",
  "settings": [
    {
      "type": "header",
      "content": "Common settings"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background image (desktop)"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Background image (mobile)"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Members get up to 30% off summer must-haves"
    }, 
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Valid online on selected lines for new and existing members until 13.06.2021 or while stocks last."
    },
    {
      "type": "color",
      "id":"color_heading",
      "label":"Heading color",
      "default": "#262626"
    },
    {
      "type": "color",
      "id":"color_text",
      "label":"Text color",
      "default": "#595959"
    },
    {
      "type": "color",
      "id":"button_text_color",
      "label":"Button label color",
      "default": "#262626"
    },
    {
      "type": "color",
      "id":"button_text_hover_color",
      "label":"Button label hover color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id":"button_color",
      "label":"Background button color",
      "default": "transparent"
    },
    {
      "type": "color",
      "id":"button_hover_color",
      "label":"Background button hover color",
      "default": "#262626"
    },
    {
      "type": "color",
      "id":"button_border_color",
      "label":"Button border color",
      "default": "#262626"
    },
    {
      "type": "color",
      "id":"button_border_hover_color",
      "label":"Button border hover color",
      "default": "#262626"
    },
    {
      "type": "checkbox",
      "label": "Open link in new tab",
      "id": "open_new_window",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Subcribe banner"
    }
  ]
}

{% endschema %}
