<cart-items class="minicart-items-wrapper {% if cart == empty %} is-empty{% endif %}" data-id="{{ section.id }}">
  <form action="{{ routes.cart_url }}" method="post" id="cart">
    <div class="cart__items" id="main-cart-items" data-id="{{ section.id }}">
      <div class="js-contents">
        {%- if cart != empty -%}
          <div class="minicart-items" id="mini-cart">
            {%- for item in cart.items -%}
              <li class="product-item" id="CartItem-{{ item.index | plus: 1 }}">
                {% if item.image %}
                  <a href="{{ item.product.url }}" class="cart-item__media product-item-photo no-effect">
                    <img class="cart-item__image" src="{{ item.image | image_url: width: 150, height: 150 }}" alt="{{ item.image.alt | escape }}" loading="lazy" width="75" height="{{ 75 | divided_by: item.image.aspect_ratio | ceil }}">
                  </a>
                {% endif %}
                <div class="product-item-details">
                  <a href="{{ item.product.url }}" class="product-item-name">{{ item.product.title | escape }}</a>
                  {%- if item.product.has_only_default_variant == false or item.selling_plan_allocation != nil -%}
                    <div class="list-option">
                      {%- for option in item.options_with_values -%}
                        <div class="product-item-options options">
                          <span class="values">{{ option.value }}</span>
                        </div>
                      {%- endfor -%}
                    </div>
                    {% if item.selling_plan_allocation.selling_plan.name %}
                      <span class="product-option">{{ item.selling_plan_allocation.selling_plan.name }}</span>
                    {% endif %}
                  {%- endif -%}
                  {% if item.discounts != blank %}
                  <ul class="discounts list-unstyled" role="list" aria-label="{{ 'customer.order.discount' | t }}">
                    {%- for discount in item.discounts -%}
                      <li class="discounts__discount">
                        {%- render 'icon-discount' -%}
                        {{ discount.title }}
                      </li>
                    {%- endfor -%}
                  </ul>
                {% endif %}
                  <span class="cart-item__error" id="Line-item-error-{{ item.index | plus: 1 }}">
                    <span class="cart-item__error-text"></span>
                  </span>
                  <div class="details-product-wrapper">
                    {% render 'price-minicart', product: item %}
                    <div class="details-qty">
                      <quantity-input class="quantity">
                        <button class="quantity__button no-js-hidden icon-minus1" name="minus" type="button">
                          <span class="visually-hidden">{{ 'products.product.quantity.decrease' | t: product: item.product.title | escape }}</span>
                        </button>
                        <input class="quantity__input" type="number" name="updates[]" value="{{ item.quantity }}" min="0" aria-label="{{ 'products.product.quantity.input_label' | t: product: item.product.title | escape }}" id="Quantity-{{ item.index | plus: 1 }}" data-index="{{ item.index | plus: 1 }}">
                        <button class="quantity__button no-js-hidden icon-plus1" name="plus" type="button">
                          <span class="visually-hidden">{{ 'products.product.quantity.increase' | t: product: item.product.title | escape }}</span>
                        </button>
                      </quantity-input>
                    </div>
                  </div>
                </div>
              </li>
            {%- endfor -%}
          </div>
        {%- endif -%}
      </div>
    </div>

    <p aria-live="polite" class="visually-hidden" id="cart-live-region-text" role="status"></p>
    <p aria-hidden="true" aria-live="polite" class="visually-hidden" id="shopping-cart-line-item-status" role="status">{{ 'accessibility.loading' | t }}</p>
  </form>
  <p class="cart__empty-text empty">{{ 'sections.minicart.empty' | t }}</p>
</cart-items>
{% schema %}
{
  "name": "t:sections.main-cart-items.name",
  "class": "cart-ajax-item"
}
{% endschema %}