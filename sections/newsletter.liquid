{{ 'component-newsletter.css' | asset_url | stylesheet_tag }}
{{ 'newsletter-section.css' | asset_url | stylesheet_tag }}

<div data-section-id="{{ section.id }}" class="section-newsletter{% if template.name == 'password' %} spaced-top-100{% endif %}{% if section.settings.full_width != blank %} newsletter-fullwidth {% else %} container {% endif %}">
  <div class="newsletter-img-wrapper {% if section.settings.full_width != blank %} row-newsletter-fullwidth {% else %} row {% endif %} ">
    <div class="newsletter__wrapper col-12{% if section.settings.image %} col-md-6{% else %} no-image{% endif %}">
      <div class="content {% if section.settings.image %}{{ section.settings.text_alignment }}{% endif %}">
        {% if section.settings.newsletter_heading != blank or section.settings.description != blank %}
          {%- if section.settings.newsletter_heading != blank -%}
            <h3 class="section__heading">{{ section.settings.newsletter_heading }}</h3>
          {%- endif -%}
        {% endif %}
        {% form 'customer', class: 'newsletter-form' %}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <div class="newsletter-form__field-wrapper">
            <div class="field">
              <input
                id="NewsletterForm--{{ section.id }}"
                type="email"
                name="contact[email]"
                class="field__input"
                aria-label="email"
                value="{{ form.email }}"
                aria-required="true"
                autocorrect="off"
                autocapitalize="off"
                autocomplete="email"
                {% if form.errors %}
                  autofocus
                  aria-invalid="true"
                  aria-describedby="Newsletter-error--{{ section.id }}"
                {% elsif form.posted_successfully? %}
                  aria-describedby="Newsletter-success--{{ section.id }}"
                {% endif %}
                placeholder="{{ 'newsletter.input_placeholder_homepage' | t }}"
                required
              >
            </div>
            <button type="submit" class="newsletter__button button" name="commit">
              {{ 'newsletter.button_label' | t }}
            </button>
            {%- if form.errors -%}
              <small class="newsletter-form__message form__message" id="Newsletter-error--{{ section.id }}">{% render 'icon-error' %}{{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}</small>
            {%- endif -%}
          </div>
          {%- if form.posted_successfully? -%}
            <h3 class="newsletter-form__message newsletter-form__message--success form__message" id="Newsletter-success--{{ section.id }}" tabindex="-1" autofocus>{{ 'newsletter.success' | t }}</h3>
          {%- endif -%}
        {% endform %}
      </div>
    </div>
    {% if section.settings.image %}
      <div class="img-wrapper no-effect col-12 col-md-6">
        <img
          srcset="{%- if section.settings.image.width >= 375 -%}{{ section.settings.image | image_url: width: 375 }} 375w,{%- endif -%}
          {%- if section.settings.image.width >= 750 -%}{{ section.settings.image | image_url: width: 750 }} 750w,{%- endif -%}
          {%- if section.settings.image.width >= 1100 -%}{{ section.settings.image | image_url: width: 1100 }} 1100w,{%- endif -%}
          {%- if section.settings.image.width >= 1500 -%}{{ section.settings.image | image_url: width: 1500 }} 1500w,{%- endif -%}
          {%- if section.settings.image.width >= 1780 -%}{{ section.settings.image | image_url: width: 1780 }} 1780w,{%- endif -%}
          {%- if section.settings.image.width >= 2000 -%}{{ section.settings.image | image_url: width: 2000 }} 2000w,{%- endif -%}
          {%- if section.settings.image.width >= 2800 -%}{{ section.settings.image | image_url: width: 2800 }} 2800w{%- endif -%}"
          src="{{ section.settings.image | image_url: width: 750 }}"
          alt="{{ section.settings.image.alt | escape }}"
          loading="lazy"
          width="{{ section.settings.image.width }}"
          height="{{ section.settings.image.height }}"
        >
      </div>
    {% endif %}
  </div>
</div>

{% style %}
  {% if section.settings.background_color != blank %}
    [data-section-id="{{ section.id }}"].section-newsletter{
      background-color: {{ section.settings.background_color }};
    }
  {% endif %}
  {% if section.settings.heading_color != blank %}
    [data-section-id="{{ section.id }}"] .newsletter__wrapper .content .section__heading{
      color:{{ section.settings.heading_color }};
    }
  {% endif %}
  {% if section.settings.text_color != blank %}
    [data-section-id="{{ section.id }}"] .newsletter__wrapper .content .description{
      color:{{ section.settings.text_color }};
    }
    [data-section-id="{{ section.id }}"].section-newsletter .newsletter__wrapper  .field__input::placeholder,
    [data-section-id="{{ section.id }}"].section-newsletter .newsletter__wrapper  .field__input {
      color:{{ section.settings.text_color }};
      opacity: 1;
    }
  {% endif %}
{% endstyle %}

{% schema %}
{
  "name": "Newsletter",
  "tag": "section",
  "class": "spaced-section spaced-section--full-width",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.footer.settings.header__1.content",
      "info": "t:sections.footer.settings.header__1.info"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "textarea",
      "id": "newsletter_heading",
      "default": "Stay up to date on product releases, event and stories.",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment on tablet, desktop",
      "default": "left",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ]
    },
    {
      "type": "header",
      "content": "Common settings"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#262626"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading color",
      "default": "#fff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#fff"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "default": true,
      "label": "t:sections.newsletter.settings.full_width.label"
    }
  ],
  "presets": [
    {
      "name": "Newsletter"
    }
  ]
}
{% endschema %}
