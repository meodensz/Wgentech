<link rel="stylesheet" href="{{ 'component-deferred-media.css' | asset_url }}" media="print" onload="this.media='all'">

<script src="{{ 'jquery.zoom.js' | asset_url }}" defer="defer"></script>
{%- assign first_3d_model = product.media | where: "media_type", "model" | first -%}
{%- if first_3d_model -%}
  {{ 'component-product-model.css' | asset_url | stylesheet_tag }}
  <link id="ModelViewerStyle" rel="stylesheet" href="https://cdn.shopify.com/shopifycloud/model-viewer-ui/assets/v1.0/model-viewer-ui.css" media="print" onload="this.media='all'">
  <link id="ModelViewerOverride" rel="stylesheet" href="{{ 'component-model-viewer-ui.css' | asset_url }}" media="print" onload="this.media='all'">
{%- endif -%}
<section class="container{% if section.settings.default_template == 'horizontal-thumbnail' or section.settings.default_template == 'vertical-thumbnail' %} layout-custom-width{% endif %}">
  <div class="product grid grid--1-col{% if product.media.size == 0 %} product--no-media{% endif %}">
    <div class="grid__item product__media-wrapper{% if section.settings.default_template == 'horizontal-thumbnail' %} horizontal-thumbnail col-12 col-lg-6{% elsif section.settings.default_template == 'vertical-thumbnail' %} vertical-thumbnail{% elsif section.settings.default_template == 'gallery-list' %} col-12 col-md-6 col-lg-6 gp-product-col-media{% endif %}{% if product.media.size == 0 %} product--no-media-2{% endif %}">
      {% case section.settings.default_template %}
        {% when 'gallery-list' %}
          <slider-component class="slider-mobile-gutter">
            <a class="skip-to-content-link button visually-hidden" href="#ProductInfo-{{ section.id }}">
              {{ "accessibility.skip_to_product_info" | t }}
            </a>
            <div class="main-img-slider">
              <ul class="product__media-list grid list-unstyled slider slider--mobile{% unless product.media[1] %} overflow-hidden{% endunless %}" role="list">
                {%- if product.selected_or_first_available_variant.featured_media != null -%}
                  {%- assign featured_media = product.selected_or_first_available_variant.featured_media -%}
                  {%- assign media_position = 1 -%}
                  <li class="product__media-item grid__item slider__slide{% if media.media_type != 'image' %} product__media-item--full{% endif %}" data-media-id="{{ section.id }}-{{ media.id }}" data-position="{{ media_position }}">
                    {% render 'product-thumbnail', media: featured_media, position: media_position, loop: section.settings.enable_video_looping, modal_id: section.id, xr_button: true %}
                  </li>
                {%- endif -%}
                {%- for media in product.media -%}
                  {%- unless media.id == product.selected_or_first_available_variant.featured_media.id -%}
                    {%- assign media_position = media_position | default: 0 | plus: 1 -%}
                    <li class="product__media-item grid__item slider__slide{% if media.media_type != 'image' %} product__media-item--full{% endif %}" data-media-id="{{ section.id }}-{{ media.id }}" data-position="{{ media_position }}">
                      {% render 'product-thumbnail', media: media, position: media_position, loop: section.settings.enable_video_looping, modal_id: section.id, xr_button: true %}
                    </li>
                  {%- endunless -%}
                {%- endfor -%}
              </ul>
            </div>
            {% if product.media[1] %} 
              <div class="slider-buttons slider-buttons--overlay no-js-hidden{% if product.media.size < 2 %} small-hide{% endif %}">
                <div class="slider-counter caption visually-hidden">
                  <span class="slider-counter--current">1</span>
                  <span aria-hidden="true"> / </span>
                  <span class="visually-hidden">{{ 'accessibility.of' | t }}</span>
                  <span class="slider-counter--total">{{ product.media.size }}</span>
                </div>
                <button type="button" class="slider-button slider-button--prev" name="previous" aria-label="{{ 'accessibility.previous_slide' | t }}"><i class="icon-arrow-left"></i></button>
                <button type="button" class="slider-button slider-button--next" name="next" aria-label="{{ 'accessibility.next_slide' | t }}"><i class="icon-arrow-right"></i></button>
              </div>
            {% endif %}
            <slider-component class="slider-dots no-js-hidden{% if product.media.size < 2 %} small-hide{% endif %} hidden">
              <ul class="grid slider{% if section.settings.default_template == 'horizontal-thumbnail' and product.media.size <= 2 %} center{% endif %}" role="list">
                  {%- if featured_media != null -%}
                  {%- assign media_index = 1 -%}
                    <li class="grid__item slider__slide">
                      <button data-position="{{ media_index }}" class="slider-dot active" name="dot" type="button" aria-label="dot-{{ media_index }}">
                        {%- if media.media_type == 'video' or media.media_type == 'external_video' -%}
                        <span class="product__media-icon motion-reduce">        
                          {%- if media.media_type == 'model' -%}
                            {%- render 'icon-3d-model' -%}
                          {%- else -%}
                            {%- render 'icon-play' -%}
                          {%- endif -%}
                        </span>
                          <img
                            srcset="{% if featured_media.preview_image.width >= 288 %}{{ featured_media.preview_image | image_url: width: 288 }} 288w,{% endif %}
                              {% if featured_media.preview_image.width >= 576 %}{{ featured_media.preview_image | image_url: width: 576 }} 576w,{% endif %}
                              {% if featured_media.preview_image.width >= 750 %}{{ featured_media.preview_image | image_url: width: 750 }} 750w,{% endif %}
                              {% if featured_media.preview_image.width >= 1100 %}{{ featured_media.preview_image | image_url: width: 1100 }} 1100w,{% endif %}
                              {% if featured_media.preview_image.width >= 1500 %}{{ featured_media.preview_image | image_url: width: 1500 }} 1500w,{% endif %}
                              {{ featured_media.preview_image | image_url: width: 2200 }} {{ featured_media.preview_image.width }}w"
                            src="{{ featured_media | image_url: width: 1500 }}"
                            sizes="(min-width: 750px) calc((100vw - 11.5rem) / 2), calc(100vw - 4rem)"
                            loading="lazy"
                            class="motion-reduce"
                            width="576"
                            height="576"
                            alt="{{ featured_media.preview_image.alt | escape }}"
                            
                          >
                        {%- else -%}
                          {%- if media.media_type == 'model' -%}
                            <span class="product__media-icon motion-reduce">
                                {%- render 'icon-3d-model' -%}
                            </span>
                          {%- endif -%}
                          <img
                            srcset="{% if featured_media.preview_image.width >= 288 %}{{ featured_media.preview_image | image_url: width: 288 }} 288w,{% endif %}
                              {% if featured_media.preview_image.width >= 576 %}{{ featured_media.preview_image | image_url: width: 576 }} 576w,{% endif %}
                              {% if featured_media.preview_image.width >= 750 %}{{ featured_media.preview_image | image_url: width: 750 }} 750w,{% endif %}
                              {% if featured_media.preview_image.width >= 1100 %}{{ featured_media.preview_image | image_url: width: 1100 }} 1100w,{% endif %}
                              {% if featured_media.preview_image.width >= 1500 %}{{ featured_media.preview_image | image_url: width: 1500 }} 1500w,{% endif %}
                              {{ featured_media.preview_image | image_url: width: 2200 }} {{ featured_media.preview_image.width }}w"
                            src="{{ featured_media | image_url: width: 1500 }}"
                            sizes="(min-width: 750px) calc((100vw - 11.5rem) / 2), calc(100vw - 4rem)"
                            loading="lazy"
                            class="motion-reduce"
                            width="576"
                            height="576"
                            alt="{{ featured_media.preview_image.alt | escape }}"
                          >
                        {%- endif -%}
                      </button>
                    </li>
                  {%- endif -%}
                  {%- for media in product.media -%}
                    {%- unless media.id == product.selected_or_first_available_variant.featured_media.id -%}
                      {%- assign media_index = media_index | default: 0 | plus: 1 -%}
                        <li class="grid__item slider__slide">
                          <button data-position="{{ media_index }}" class="slider-dot{% if product.selected_or_first_available_variant.featured_media == null and forloop.index == 1 %} active{% endif %}" name="dot" type="button" aria-label="dot-{{ media_index }}">
                            {% render 'media', media: media, position: media_index %}
                          </button>
                        </li>
                    {%- endunless -%}
                  {%- endfor -%}
              </ul>
              {% if section.settings.default_template == 'vertical-thumbnail' and product.media.size >= 3 %}
                <div class="slider-buttons no-js-hidden ">
                    <button type="button" class="btn-2 slider-button slider-button--prev" name="previous" aria-label="{{ 'accessibility.previous_slide' | t }}">{% render 'icon-caret' %}</button>
                    <button type="button" class="btn-2 slider-button slider-button--next" name="next" aria-label="{{ 'accessibility.next_slide' | t }}">{% render 'icon-caret' %}</button>
                </div>
              {% elsif section.settings.default_template == 'horizontal-thumbnail' %}
                <div class="slider-buttons no-js-hidden">
                    <button type="button" class="btn-2 slider-button slider-button--prev" name="previous" aria-label="{{ 'accessibility.previous_slide' | t }}"><i class="icon-arrow-left"></i></button>
                    <button type="button" class="btn-2 slider-button slider-button--next" name="next" aria-label="{{ 'accessibility.next_slide' | t }}"><i class="icon-arrow-right"></i></button>
                </div>
              {% endif %}
            </slider-component>
          </slider-component>
        {% else %} 
          <slider-component {% if section.settings.default_template == 'horizontal-thumbnail' %} class="slider-horizontal"{% elsif section.settings.default_template == 'vertical-thumbnail' %} class="slider-vertical" {% endif %}>
            <a class="skip-to-content-link button visually-hidden" href="#ProductInfo-{{ section.id }}">
              {{ "accessibility.skip_to_product_info" | t }}
            </a>
            <ul class="product__media-list grid list-unstyled slider" role="list">
              {%- assign variant_images = product.images | where: 'attached_to_variant?', true | map: 'src' -%}
              {%- if product.selected_or_first_available_variant.featured_media != null -%}
                {%- assign featured_media = product.selected_or_first_available_variant.featured_media -%}
                  {%- assign media_position = 1 -%}
                  <li class="product__media-item grid__item slider__slide{% if media.media_type != 'image' %} product__media-item--full{% endif %}{% if section.settings.hide_variants and variant_images contains media.src %} product__media-item--variant{% endif %} active" data-media-id="{{ section.id }}-{{ featured_media.id }}" data-position="{{ media_position }}">
                    {% render 'product-thumbnail', media: featured_media, position: media_position, loop: section.settings.enable_video_looping, modal_id: section.id, xr_button: true %}
                  </li>
              {%- endif -%}
              {%- for media in product.media -%}
                {%- unless media.id == product.selected_or_first_available_variant.featured_media.id -%}
                  {%- assign media_position = media_position | default: 0 | plus: 1 -%}
                  <li class="product__media-item grid__item slider__slide{% if media.media_type != 'image' %} product__media-item--full{% endif %}{% if section.settings.hide_variants and variant_images contains media.src %} product__media-item--variant{% endif %}{% if product.selected_or_first_available_variant.featured_media == null and forloop.index == 1 %} active{% endif %}" data-media-id="{{ section.id }}-{{ media.id }}" data-position="{{ media_position }}">
                    {% render 'product-thumbnail', media: media, position: media_position, loop: section.settings.enable_video_looping, modal_id: section.id, xr_button: true %}
                  </li>
                {%- endunless -%}
              {%- endfor -%}
            </ul>
            <div class="slider-buttons no-js-hidden {% if product.media.size < 2 %} small-hide{% endif %}">
              <button type="button" class="btn-2 slider-button slider-button--prev" name="previous" aria-label="{{ 'accessibility.previous_slide' | t }}">{% render 'icon-caret' %}</button>
              <div class="slider-counter caption visually-hidden">
                <span class="slider-counter--current">1</span>
                <span aria-hidden="true"> / </span>
                <span class="visually-hidden">{{ 'accessibility.of' | t }}</span>
                <span class="slider-counter--total">{% if section.settings.hide_variants %}{{ product.media.size | minus: variant_images.size | plus: 1 }}{% else %}{{ product.media.size }}{% endif %}</span>
              </div>
              <button type="button" class="btn-2 slider-button slider-button--next" name="next" aria-label="{{ 'accessibility.next_slide' | t }}">{% render 'icon-caret' %}</button>
            </div>
            <slider-component class="slider-dots no-js-hidden{% if product.media.size < 2 %} small-hide{% endif %}{% if section.settings.default_template == 'horizontal-thumbnail' and product.media.size < 2 %} hidden{% endif %}">
              <ul class="grid slider{% if section.settings.default_template == 'horizontal-thumbnail' and product.media.size <= 2 %} center{% endif %}" role="list">
                  {%- if featured_media != null -%}
                  {%- assign media_index = 1 -%}
                    <li class="grid__item slider__slide">
                      <button data-position="{{ media_index }}" class="slider-dot active" name="dot" type="button" aria-label="dot-{{ media_index }}">
                        {%- if media.media_type == 'video' or media.media_type == 'external_video' -%}
                        <span class="product__media-icon motion-reduce">        
                          {%- if media.media_type == 'model' -%}
                            {%- render 'icon-3d-model' -%}
                          {%- else -%}
                            {%- render 'icon-play' -%}
                          {%- endif -%}
                        </span>
                          <img
                            srcset="{% if featured_media.preview_image.width >= 288 %}{{ featured_media.preview_image | image_url: width: 288 }} 288w,{% endif %}
                              {% if featured_media.preview_image.width >= 576 %}{{ featured_media.preview_image | image_url: width: 576 }} 576w,{% endif %}
                              {% if featured_media.preview_image.width >= 750 %}{{ featured_media.preview_image | image_url: width: 750 }} 750w,{% endif %}
                              {% if featured_media.preview_image.width >= 1100 %}{{ featured_media.preview_image | image_url: width: 1100 }} 1100w,{% endif %}
                              {% if featured_media.preview_image.width >= 1500 %}{{ featured_media.preview_image | image_url: width: 1500 }} 1500w,{% endif %}
                              {{ featured_media.preview_image | image_url: width: 2200 }} {{ featured_media.preview_image.width }}w"
                            src="{{ featured_media | image_url: width: 1500 }}"
                            sizes="(min-width: 750px) calc((100vw - 11.5rem) / 2), calc(100vw - 4rem)"
                            loading="lazy"
                            class="motion-reduce"
                            width="576"
                            height="576"
                            alt="{{ featured_media.preview_image.alt | escape }}"
                            
                          >
                        {%- else -%}
                          {%- if media.media_type == 'model' -%}
                            <span class="product__media-icon motion-reduce">
                                {%- render 'icon-3d-model' -%}
                            </span>
                          {%- endif -%}
                          <img
                            srcset="{% if featured_media.preview_image.width >= 288 %}{{ featured_media.preview_image | image_url: width: 288 }} 288w,{% endif %}
                              {% if featured_media.preview_image.width >= 576 %}{{ featured_media.preview_image | image_url: width: 576 }} 576w,{% endif %}
                              {% if featured_media.preview_image.width >= 750 %}{{ featured_media.preview_image | image_url: width: 750 }} 750w,{% endif %}
                              {% if featured_media.preview_image.width >= 1100 %}{{ featured_media.preview_image | image_url: width: 1100 }} 1100w,{% endif %}
                              {% if featured_media.preview_image.width >= 1500 %}{{ featured_media.preview_image | image_url: width: 1500 }} 1500w,{% endif %}
                              {{ featured_media.preview_image | image_url: width: 2200 }} {{ featured_media.preview_image.width }}w"
                            src="{{ featured_media | image_url: width: 1500 }}"
                            sizes="(min-width: 750px) calc((100vw - 11.5rem) / 2), calc(100vw - 4rem)"
                            loading="lazy"
                            class="motion-reduce"
                            width="576"
                            height="576"
                            alt="{{ featured_media.preview_image.alt | escape }}"
                          >
                        {%- endif -%}
                      </button>
                    </li>
                  {%- endif -%}
                  {%- for media in product.media -%}
                    {%- unless media.id == product.selected_or_first_available_variant.featured_media.id -%}
                      {%- assign media_index = media_index | default: 0 | plus: 1 -%}
                        <li class="grid__item slider__slide">
                          <button data-position="{{ media_index }}" class="slider-dot{% if product.selected_or_first_available_variant.featured_media == null and forloop.index == 1 %} active{% endif %}" name="dot" type="button" aria-label="dot-{{ media_index }}">
                            {% render 'media', media: media, position: media_index %}
                          </button>
                        </li>
                    {%- endunless -%}
                  {%- endfor -%}
              </ul>
              {% if section.settings.default_template == 'vertical-thumbnail' and product.media.size >= 3 %}
                <div class="slider-buttons no-js-hidden ">
                    <button type="button" class="btn-2 slider-button slider-button--prev" name="previous" aria-label="{{ 'accessibility.previous_slide' | t }}">{% render 'icon-caret' %}</button>
                    <button type="button" class="btn-2 slider-button slider-button--next" name="next" aria-label="{{ 'accessibility.next_slide' | t }}">{% render 'icon-caret' %}</button>
                </div>
              {% elsif section.settings.default_template == 'horizontal-thumbnail' %}
                <div class="slider-buttons no-js-hidden">
                    <button type="button" class="btn-2 slider-button slider-button--prev" name="previous" aria-label="{{ 'accessibility.previous_slide' | t }}"><i class="icon-arrow-left"></i></button>
                    <button type="button" class="btn-2 slider-button slider-button--next" name="next" aria-label="{{ 'accessibility.next_slide' | t }}"><i class="icon-arrow-right"></i></button>
                </div>
              {% endif %}
            </slider-component>
          </slider-component>
        {% endcase %}
    </div>
    <div class="product__info-wrapper grid__item">
      <div id="ProductInfo-{{ section.id }}" class="product__info-container{% if section.settings.enable_sticky_info %} product__info-container--sticky{% endif %}">
        {%- assign product_form_id = 'product-form-' | append: section.id -%}
        {%- assign current_variant = product.selected_or_first_available_variant -%}
        {%- for block in section.blocks -%}
          {%- case block.type -%}
          {%- when '@app' -%}
            {% render block %}
          {%- when 'text' -%}
            <p class="product__text{% if block.settings.text_style == 'uppercase' %} caption-with-letter-spacing{% elsif block.settings.text_style == 'subtitle' %} subtitle{% endif %}">
              {{- block.settings.text -}}
            </p>
          {%- when 'title' -%}
            <h1 class="product__title">
              {{ product.title | escape }}
            </h1>
          {%- when 'price' -%}
            <div class="no-js-hidden" id="price-{{ section.id }}">
              {%- render 'price', product: product, use_variant: true, show_badges: true, price_class: 'price--large' -%}
            </div>
            {%- form 'product', product, id: 'product-form-installment', class: 'installment caption-large' -%}
              <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
              {{ form | payment_terms }}
            {%- endform -%}
          {%- when 'product_details'-%}
            {%- if block.settings.product_page_show_product_availability -%}
              <div class="label-detail-wrapper" data-availability>
                {% if current_variant.available %}
                  <span data-available class="product-available in-stock">{{ 'products.product.in_stock' | t }}</span>
                {% else %}
                  <span data-available class="product-available out-stock">{{ 'products.product.out_stock' | t }}</span>
                {% endif %}
              </div>
            {%- endif -%}
            {%- if block.settings.product_page_show_sku -%}
              {% if current_variant.sku != blank %}
                <div class="label-detail-wrapper">
                  <span class="label-detail">{{ 'products.product.sku' | t }}: </span>
                  <span class="variant-sku">{{ current_variant.sku }}</span>
                </div>
              {% endif %}
            {%- endif -%}
            {%- if block.settings.product_page_show_product_type -%}
              {% if product.type != blank %}
                <div class="label-detail-wrapper">
                  <span class="label-detail">{{ 'products.product.type' | t }}: </span>
                  <span>{{ product.type }}</span>
                </div>
              {% endif %}
            {%- endif -%}
          {%- when 'description' -%}
            {%- if product.description != blank -%}
              <div class="product__description rte">
                {{ product.description }}
              </div>
            {%- endif -%}
          {%- when 'collapsible_tab' -%}
            <div class="product__accordion accordion">
              <details>
                <summary>
                  <div class="summary__title">
                    {% render 'icon-accordion', icon: block.settings.icon %}
                    <h2 class="h4 accordion__title">
                      {{ block.settings.heading | default: block.settings.page.title }}
                    </h2>
                  </div>
                  {% render 'icon-caret' %}
                </summary>
                <div class="accordion__content rte">
                  {{ block.settings.content }}
                  {{ block.settings.page.content }}
                </div>
              </details>
            </div>
          {%- when 'popup' -%}
            {% if block.settings.page.content != blank %}
              <modal-opener class="product-popup-modal__opener no-js-hidden" data-modal="#PopupModal-{{ block.id }}">
                <button id="ProductPopup-{{ block.id }}" class="product-popup-modal__button link" type="button" aria-haspopup="dialog">{{ block.settings.text | default: block.settings.page.title }}</button>
              </modal-opener>
            {% endif %}
            <a href="{{ block.settings.page.url }}" class="product-popup-modal__button link no-js">{{ block.settings.text }}</a>
          {%- when 'share' -%}
            <div class="social-share">
            {%- if block.settings.share_label != blank -%}
              <div class="title-share">{{ block.settings.share_label }}</div>
            {%- endif -%}
              {% render 'social-sharing' %}
            </div>
          {%- when 'variant_picker' -%}
            {%- unless product.has_only_default_variant -%}
              {%- render 'variant_product', product: product,
                product_page_option_color_swatch: block.settings.product_page_option_color_swatch,
                product_page_color_swatch_layout: block.settings.product_page_color_swatch_layout,
                option_show_popup_size_guide: block.settings.option_show_popup_size_guide,
                page_size_guide: block.settings.page 
              -%}
            {%- endunless -%}
          {%- when 'buy_buttons' -%}
            <product-form class="product-form">
              <div class="product-form__error-message-wrapper" role="alert" hidden>
                <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-error" viewBox="0 0 13 13">
                  <circle cx="6.5" cy="6.50049" r="5.5" stroke="white" stroke-width="2"/>
                  <circle cx="6.5" cy="6.5" r="5.5" fill="#EB001B" stroke="#EB001B" stroke-width="0.7"/>
                  <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="white"/>
                  <path d="M5.87413 3.17832H5.51535L5.52424 3.537L5.6245 7.58083L5.63296 7.92216H5.97439H7.02713H7.36856L7.37702 7.58083L7.47728 3.537L7.48617 3.17832H7.12739H5.87413ZM6.50076 10.0109C7.06121 10.0109 7.5317 9.57872 7.5317 9.00504C7.5317 8.43137 7.06121 7.99918 6.50076 7.99918C5.94031 7.99918 5.46982 8.43137 5.46982 9.00504C5.46982 9.57872 5.94031 10.0109 6.50076 10.0109Z" fill="white" stroke="#EB001B" stroke-width="0.7">
                </svg>
                <span class="product-form__error-message"></span>
              </div>
              {%- form 'product', product, id: product_form_id, class: 'form', novalidate: 'novalidate', data-type: 'add-to-cart-form' -%}
                <div class="product-form__error-message-wrapper" role="alert" hidden>
                  <span class="product-form__error-message"></span>
                </div>
                <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                {% if product.selling_plan_groups.size > 0 %}
                  {%- liquid
                    assign current_variant = product.selected_or_first_available_variant | default: product.variants.first
                    assign current_selling_plan_allocation = current_variant.selected_selling_plan_allocation
                  
                    if current_selling_plan_allocation == nil and current_variant.requires_selling_plan
