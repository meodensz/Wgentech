{{ 'component-image-with-text.css' | asset_url | stylesheet_tag }}

<div  data-section-id="{{ section.id }}" class="image-with-text container ">
  <div class="image-with-text__grid {% if section.settings.layout == 'text_first' %} image-with-text__grid--reverse{% endif %} grid grid--gapless grid--1-col grid--2-col-tablet">
    <div class="grid__item">
      <div class="image-with-text__media image-with-text__media--{{ section.settings.height }} {% if section.settings.image != blank %}media{% else %}image-with-text__media--placeholder placeholder{% endif %}"
        {% if section.settings.height == 'adapt' and section.settings.image != blank %} style="padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;"{% endif %}
      >
        {%- if section.settings.image != blank -%}
          <img
            src="{{ section.settings.image | image_url: width: 750 }}"
            srcset="{%- if section.settings.image.width >= 375 -%}{{ section.settings.image | image_url: width: 375 }} 375w,{%- endif -%}
            {%- if section.settings.image.width >= 750 -%}{{ section.settings.image | image_url: width: 750 }} 750w,{%- endif -%}
            {%- if section.settings.image.width >= 1100 -%}{{ section.settings.image | image_url: width: 1100 }} 1100w,{%- endif -%}
            {%- if section.settings.image.width >= 1500 -%}{{ section.settings.image | image_url: width: 1500 }} 1500w,{%- endif -%}
            {%- if section.settings.image.width >= 1780 -%}{{ section.settings.image | image_url: width: 1780 }} 1780w,{%- endif -%}
            {%- if section.settings.image.width >= 2000 -%}{{ section.settings.image | image_url: width: 2000 }} 2000w,{%- endif -%}
            {%- if section.settings.image.width >= 2800 -%}{{ section.settings.image | image_url: width: 2800 }} 2800w{%- endif -%}"
            alt="{{ section.settings.image.alt | escape }}"
            sizes="(min-width: 1100px) 535px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
            loading="lazy" 
            width="{{ section.settings.image.width }}" 
            height="{{ section.settings.image.height }}" 
          >
        {%- elsif section.settings.background_image == blank and section.settings.background_image_mobile == blank  -%}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
      </div>
    </div>
    <div class="grid__item">
      <div class="image-with-text__content image-with-text__content--{{ section.settings.height }}">
        {%- for block in section.blocks -%}
          {% case block.type %}
            {%- when 'heading' -%}
              <h3 class="image-with-text__heading {% if block.settings.heading_size == 'extra-small' %}h6{% elsif block.settings.heading_size == 'small' %}h5{% elsif block.settings.heading_size == 'medium' %}h4{% elsif block.settings.heading_size == 'large' %}h3{% elsif block.settings.heading_size == 'extra-large' %}h2{% else %}h1{% endif %}">
                {{ block.settings.heading | escape }}
              </h3>
            {%- when 'text' -%}
              <div class="image-with-text__text rte">{{ block.settings.text }}</div>
              {%- if block.settings.title_signature != blank or block.settings.signature_text_post != blank -%}
                <div class="wrapper-signature">
                {%- if block.settings.title_signature != blank -%}
                    <p>{{ block.settings.title_signature }}</p>
                {%- endif -%}
                {%- if block.settings.signature_text_post != blank -%}
                    <h4 class="signature">{{ block.settings.signature_text_post }}</h4>
                {%- endif -%}
                </div> 
              {%- endif -%}
            {%- when 'button' -%}
              {%- if block.settings.button_label != blank -%}
                <a href="{{ block.settings.button_link }}" class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"{% if block.settings.button_link == blank %} aria-disabled="true"{% endif %}{% if block.settings.open_new_window %} target="_blank"{% endif %}>{{ block.settings.button_label | escape }}</a>
              {%- endif -%}
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>
{% style %}
  {% if section.settings.background_image_mobile != blank %}
    [data-section-id="{{ section.id }}"].image-with-text{
      background-image:url({{ section.settings.background_image_mobile | image_url: width: 2800 }});
      padding-bottom: 328px;
    }
    @media (min-width: 768px) {
      {% if section.settings.background_image != blank %}
        [data-section-id="{{ section.id }}"].image-with-text{
          background-image:url({{ section.settings.background_image | image_url: width: 2800 }});
        }
      {% endif %}
      [data-section-id="{{ section.id }}"].image-with-text{
        padding-bottom:0;
      }
    }
  {% elsif section.settings.background_image != blank %}
    [data-section-id="{{ section.id }}"].image-with-text{
      background-image:url({{ 'image-placeholder.png' | asset_url }});
      padding-bottom: 328px;
    }
  {% endif %}
  [data-section-id="{{ section.id }}"].image-with-text .image-with-text__heading{
    color: {{ section.settings.title_color }} ;
  }
  [data-section-id="{{ section.id }}"].image-with-text .image-with-text__text p {
    color: {{ section.settings.text_color }};
  }
  [data-section-id="{{ section.id }}"].image-with-text .wrapper-signature {
    color: {{ section.settings.signature_color }};
  }
  [data-section-id="{{ section.id }}"].image-with-text .wrapper-signature h4 {
    color: {{ section.settings.signature_color }};
  }
{% endstyle %}
{% schema %}
{
  "name": "t:sections.image-with-text.name",
  "class":"padding-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    },
    {
      "type": "image_picker",
      "id": "background_image_mobile",
      "label": "Background image(mobile)"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Heading color",
      "default": "#262626"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#595959"
    },
    {
      "type": "color",
      "id": "signature_color",
      "label": "Quote name color",
      "default": "#262626"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:sections.image-with-text.settings.image.label"
    },
    {
      "type": "select",
      "id": "layout",
      "options": [
        {
          "value": "image_first",
          "label": "Text right-image left"
        },
        {
          "value": "text_first",
          "label": "Text left-image right"
        }
      ],
      "default": "image_first",
      "label": "t:sections.image-with-text.settings.layout.label",
      "info": "t:sections.image-with-text.settings.layout.info"
    },
    {
      "type": "select",
      "id": "height",
      "options": [
        {
          "value": "adapt",
          "label": "t:sections.image-with-text.settings.height.options__1.label"
        },
        {
          "value": "small",
          "label": "t:sections.image-with-text.settings.height.options__2.label"
        },
        {
          "value": "large",
          "label": "t:sections.image-with-text.settings.height.options__3.label"
        }
      ],
      "default": "adapt",
      "label": "t:sections.image-with-text.settings.height.label"
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "t:sections.image-with-text.blocks.heading.name",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Image with text",
          "label": "t:sections.image-with-text.blocks.heading.settings.heading.label"
        },
        {
          "type": "select",
          "id": "heading_size",
          "options": [
            {
              "value": "extra-small",
              "label": "Extra small"
            },
            {
              "value": "small",
              "label": "Small"
            },
            {
              "value": "medium",
              "label": "Medium"
            },
            {
              "value": "large",
              "label": "Large"
            },
            {
              "value": "extra-large",
              "label": "Extra large"
            },
            {
              "value": "extra-extra-large",
              "label": "Extra extra large"
            }
          ],
          "default": "medium",
          "label": "t:sections.rich-text.blocks.heading.settings.heading_size.label"
        }
      ]
    },
    {
      "type": "text",
      "name": "t:sections.image-with-text.blocks.text.name",
      "limit": 1,
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>",
          "label": "t:sections.image-with-text.blocks.text.settings.text.label"
        },
        {
          "type": "text",
          "id": "title_signature",
          "label": "Job",
          "default": "Co-founder"
        },
        {
          "type": "text",
          "id": "signature_text_post",
          "label": "Signature",
          "default": "John Doe"
        }
      ]
    },
    {
      "type": "button",
      "name": "t:sections.image-with-text.blocks.button.name",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "button_label",
          "default": "Button label",
          "label": "t:sections.image-with-text.blocks.button.settings.button_label.label",
          "info": "t:sections.image-with-text.blocks.button.settings.button_label.info"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "t:sections.image-with-text.blocks.button.settings.button_link.label"
        },
        {
          "type": "checkbox",
          "id": "open_new_window",
          "label": "Open link in new tab",
          "default": false
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.image-with-text.presets.name",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "text"
        },
        {
          "type": "button"
        }
      ]
    }
  ]
}
{% endschema %}
