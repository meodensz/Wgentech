        },
        {
          "type": "color",
          "id": "social_color",
          "label": "social media color",
          "default": "#262626"
        }
      ]
    },
    {
      "type": "link_list",
      "name": "Category tree",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Heading"
        },
        {
          "type": "link_list",
          "id": "navigation",
          "label": "Navigation",
          "default": "main-menu"
