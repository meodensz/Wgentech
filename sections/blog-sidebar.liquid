  "name": "Blog sidebar",
  "tag": "section",
	"class":"section-sidebar",
  "settings": [
  ],
  "blocks": [
    {
      "type": "search",
      "name": "Search",
			"limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Heading"
