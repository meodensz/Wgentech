      "type": "blog_list",
      "name": "Blog list",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Heading"
        },
        {
          "type": "blog",
          "id": "blog",
          "label": "Select blog"
        },
        {
          "type": "range",
          "id": "limit",
          "label": "Limit blog posts",
          "default": 3,
          "min": 1,
          "max": 10
        }
      ]
    }
  ]
}
