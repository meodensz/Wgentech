<link rel="stylesheet" href="{{ 'disclosure.css' | asset_url }}" type="text/css" media="all">
<noscript>{{ 'disclosure.css' | asset_url | stylesheet_tag }}</noscript>
{%- if localization.available_countries.size > 1 -%}
<div class="select-header selector-currency">
  <noscript>
    {%- form 'localization', class: 'localization-form', id: 'noscript-localization-form' -%}
      <div class="localization-form__select">
        <select class="localization-selector link" name="country_code" aria-label="CountryLabelNoScript">
          {%- for country in localization.available_countries -%}
            <option value="{{ country.iso_code }}" {%- if country.iso_code == localization.country.iso_code %} selected{% endif %}>
              {{ country.currency.iso_code }}
            </option>
          {%- endfor -%}
        </select>
        <i class="icon-download"></i>
      </div>
      <button class="button button--tertiary">{{ 'localization.update_country' | t }}</button>
    {%- endform -%}
  </noscript>
  <localization-form>
    {%- form 'localization', class: 'localization-form' -%}
      <div class="no-js-hidden">
        <div class="disclosure">
          <button type="button" class="disclosure__button localization-form__select localization-selector link link--text" aria-expanded="false" aria-describedby="CountryLabel">
            {{ localization.country.currency.iso_code }}
            <i class="icon-download"></i>
          </button>
          <ul role="list" class="disclosure__list list-unstyled" hidden>
            {%- for country in localization.available_countries -%}
              <li class="disclosure__item" tabindex="-1">
                <a class="link link--text no-effect disclosure__link{% if country.iso_code == localization.country.iso_code %} disclosure__link--active{% endif %} focus-inset" href="#"{% if country.iso_code == localization.country.iso_code %} aria-current="true"{% endif %} data-value="{{ country.iso_code }}">{{ country.currency.iso_code }}
                </a>
              </li>
            {%- endfor -%}
          </ul>
        </div>
        <input type="hidden" name="country_code" value="{{ localization.country.iso_code }}">
      </div>
    {%- endform -%}
  </localization-form>
</div>
{%- endif -%}