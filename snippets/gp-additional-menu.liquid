<div class="gp-additional-menu">
    {% liquid 
    if block.settings.enable_country_selector 
      render 'currency'
    endif
    if block.settings.enable_language_selector
      render 'languages'
    endif
    %}
    {% if block.settings.custom_content != blank %}
      <div class="addtional-custom-content">
        {{ block.settings.custom_content }}
      </div>
    {%- endif -%}
    {%- if block.settings.enable_socials -%}
      <div class="addtitional-social">
        <h5 class="title">{{ 'general.social.follow_us' | t }}</h5>
        <ul>
          {%- if settings.social_twitter_link != blank -%}
            <li class="list-social__item">
              <a target="_blank" href="{{ settings.social_twitter_link }}" class="icon-mini-hover no-effect">
                {%- render 'icon-twitter' -%}
                <span class="visually-hidden">{{ 'general.social.links.twitter' | t }}</span>
              </a>
            </li>
          {%- endif -%}
